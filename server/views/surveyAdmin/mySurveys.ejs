<!-- Partials -->
<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %> <%-
include ../partials/content.ejs %>

<!-- Page Content -->
<div class="container">
  <div class="row">
 <!--   <div class="col-md-offset-1 col-md-10"> -->
    <div class="col-lg-offset-1 col-lg-10">      
      <a href="/surveys/createSurvey" class="btn btn-primary"><i class="fa fa-plus"></i> Add Survey</a>
      <br><br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th class="text-center">Title</th>
              <th class="text-center">Description</th>
              <th class="text-center">Expiration Date</th>
              <th class="text-center">Update</th>
              <th class="text-center">Delete</th>
               <th class="text-center">Show Result</th>
            </tr>
            </thead>
            <tbody>
          <!--The body of the table-->
          <% for(let count = 0; count < SurveyList.length; count++) { %>
            <tr>
              <td class="text-center col-2"><%= SurveyList[count].title %></td>
              <td class="text-center col-4">
                <%= SurveyList[count].description %>
              </td>
              <td class="text-center col-2">
                <%= SurveyList[count].expirationDate %>
              </td>
              <td class="text-center">      
                <a href="/surveys/updateSurvey/<%= SurveyList[count]._id %>" class="btn btn-warning">
                            <i class="fas fa-pencil-alt"></i> Update</a>
              </td>
              <td class="text-center">
                <a href="/surveys/delete/<%= SurveyList[count]._id %>" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete</a>                    
              </td>
              <td class="text-center">
                <a href="#" class="btn btn-success">
               <i class="fas fa-poll"></i> Show Result</a>                    
              </td>
            </tr>
            <% } %>            
            </tr>
          </tbody>
        </table>
      </div>
              <div class="col-lg-offset-1 col-lg-10 text-center"> 
     
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

