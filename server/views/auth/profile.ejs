<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>
<%- include ../partials/content.ejs %>

<!-- Content for Register Page -->
<main class="container">

  <div class="row">
    <div class="offset-md-4 col-md-4">
      <form method="POST" autocomplete="off">
        <fieldset class="form-group">
          <label for="username">Username: </label>
          <input
            type="text"
            class="form-control"
            name="username"
            id="username"
            value="<%= profile.username %>"
            readonly="readonly"
            autofocus
          />
        </fieldset>
<!-- 
        <fieldset class="form-group">
          <label for="password">Password: </label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Enter password"
            id="password"
            value="<%= profile.password %>"
            readonly="readonly"
          />
        </fieldset> -->

        <fieldset class="form-group">
          <label for="email">Email: </label>
          <input
            type="text"
            class="form-control"
            name="email"
            placeholder="Enter Email Address"
            id="email"
            value="<%= profile.email %>"
            readonly="readonly"
          />
        </fieldset>

        <fieldset class="form-group">
          <label for="displayName">Display Name: </label>
          <input
            type="text"
            class="form-control"
            name="displayName"
            placeholder="Enter Display Name"
            id="displayName"
            value="<%= profile.displayName %>"
            readonly="readonly"
          />
        </fieldset>

        <fieldset class="form-group text-center">
          <input type="button" class="btn btn-success" value="Edit Profile" />   
            <a href="/edit-profile/<%= profile._id %>">
          </a>
          <a href="/"><input type="button" class="btn btn-warning" value="Cancel"/>
          </a>
        </fieldset>
      </form>
    </div>
  </div>
</main>

